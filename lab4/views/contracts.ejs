<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Contracts List</title>
</head>
<body>
    <h1>Contracts</h1>

    <table>
        <tr>
            <th>Company Name</th>
            <th>Type</th>
            <th>Validity</th>
            <th>Actions</th>
        </tr>

        <% contracts.forEach(contract => { %>
            <tr>
                <td><%= contract.companyName %></td>
                <td><%= contract.type %></td>
                <td><%= contract.validFrom.toDateString() %> : <%= contract.validTo.toDateString() %></td>
                <td>
                    <a href="/contracts/edit/<%= contract._id %>">Edit</a>
                    <a href="/contracts/confirm-delete/<%= contract._id %>">Delete</a>
                </td>
            </tr>
        <% }); %>
    </table>

    <a href="/contracts/add">
        <button>Add New Contract</button>
    </a>
</body>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #79af96;
        color: #333;
        margin: 0;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #2c7a2b;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
    }

    table, th, td {
        border: 1px solid white;
    }

    th, td {
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: #2c7a2b;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #dfdfdf;
    }

    tr:nth-child(odd) {
        background-color: #a4a4a4;
    }

    tr:hover {
        background-color: #f4f4f4;
    }

    a {
        color: #2c7a2b;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    button {
        background-color: #2c7a2b;
        color: white;
        font-size: 15px;
        padding: 8px 16px;
        border: none;
        border-radius: 7px;
        cursor: pointer;
    }

    button:hover {
        background-color: #1e601d;
    }
</style>
</html>
